<%= form_for(@event) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :when %>
  <%= f.date_select :when, :start_year => Date.today.year %><br/>
  <%= f.time_select :when, :ignore_date => true, ampm: true %><br/>

  <%= f.label :details %>
  <%= f.text_area :details %>

  <%= f.label :duration %>
  <%= f.text_field :duration %>

  <%= f.label :max_bookings %>
  <%= f.number_field :max_bookings %>

  <%= f.label :price, "Price in cents" %>
  <%= f.number_field :price, step: 1 %>

  <%= f.hidden_field :creator_id, :value => current_user.id %>

  <%= f.submit %>
<% end %>
